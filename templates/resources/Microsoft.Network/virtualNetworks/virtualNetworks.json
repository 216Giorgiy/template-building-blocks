{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "VNET"
      }
    },
    "virtualNetworkSettings": {
      "type": "array"
    },
    "virtualNetworkPeerings": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), string(parameters('virtualNetworkSettings'))))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2016-06-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('virtualNetworkSettings')[copyIndex()].name]",
      "copy": {
        "name": "vnetIterator",
        "count": "[length(parameters('virtualNetworkSettings'))]"
      },
      "properties": "[parameters('virtualNetworkSettings')[copyIndex()].properties]"
    },
    {
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2016-06-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('virtualNetworkPeerings')[copyIndex()].name]",
      "copy": {
        "name": "vnetPeeringIterator",
        "count": "[length(parameters('virtualNetworkPeerings'))]"
      },
      "properties": "[parameters('virtualNetworkPeerings')[copyIndex()].properties]"
    }
  ],
  "outputs": {
  }
}
