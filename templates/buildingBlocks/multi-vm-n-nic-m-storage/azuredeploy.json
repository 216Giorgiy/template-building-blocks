{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbVM"
      }
    },
    "parameterFileLink": { "type": "string" },
    "protectedSettings": { "type": "secureObject" }
  },
  "variables": {
    "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), parameters('parameterFileLink')))]",
    "parametersDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-params-', variables('templateUniqueString'))]",
    "parametersTemplate": "[uri(deployment().properties.templateLink.uri, 'n-vm-parameterLink-resolver.json')]",
    "nVMDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-deployNVM-', variables('templateUniqueString'))]",
    "nVMTemplate": "[uri(deployment().properties.templateLink.uri, 'azuredeploy.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('parametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[parameters('parameterFileLink')]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('nVMDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nVMTemplate')]"
        },
        "parameters": {
          "deploymentContext": {
            "value": {
              "parentTemplateUniqueString": "[concat(variables('templateUniqueString'), '-deployNVM')]"
            }
          },
          "virtualMachinesSettings": {
            "value": "[reference('parametersDeploymentName').outputs.virtualMachinesSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference('parametersDeploymentName').outputs.virtualNetworkSettings.value]"
          },
          "buildingBlockSettings": {
            "value": "[reference('parametersDeploymentName').outputs.buildingBlockSettings.value]"
          },
          "protectedSettings": {
            "value": "[parameters('protectedSettings')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
