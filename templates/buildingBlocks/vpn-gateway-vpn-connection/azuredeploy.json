{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbVM"
      }
    },
    "parameterFileLink": { "type": "string" },
    "protectedSettings": { "type": "secureObject" }
  },
  "variables": {
    "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), parameters('parameterFileLink')))]",
    "parametersDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-params-', variables('templateUniqueString'))]",
    "parametersTemplate": "[uri(deployment().properties.templateLink.uri, 'parameterLink-resolver.json')]",
    "vpnDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-deployVpn-', variables('templateUniqueString'))]",
    "vpnTemplate": "[uri(deployment().properties.templateLink.uri, 'vpn-gateway-vpn-connection-deploy.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('parametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[parameters('parameterFileLink')]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('vpnDeploymentName')]",
      "dependsOn": [
        "[variables('parametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vpnTemplate')]"
        },
        "parameters": {
          "deploymentContext": {
            "value": {
              "parentTemplateUniqueString": "[concat(variables('templateUniqueString'), '-deployVpn')]"
            }
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('parametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "virtualNetworkGatewaySettings": {
            "value": "[reference(variables('parametersDeploymentName')).outputs.virtualNetworkGatewaySettings.value]"
          },
          "connectionSettings": {
            "value": "[reference(variables('parametersDeploymentName')).outputs.connectionSettings.value]"
          },
          "protectedSettings": {
            "value": "[parameters('protectedSettings')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "resources": {
      "type": "array",
      "value": "[reference(variables('vpnDeploymentName')).outputs.resources.value]"
    }
  }
}
