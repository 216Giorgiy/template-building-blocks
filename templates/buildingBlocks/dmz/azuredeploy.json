{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbdmz"
      }
    },
    "parameterFileLink": { "type": "string" },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": null
    },
    "sshPublicKey": {
      "type": "securestring",
      "defaultValue": null
    }
  },
  "variables": {
    "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), parameters('parameterFileLink')))]",
    "parametersDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-params-', variables('templateUniqueString'))]",
    "parametersTemplate": "[uri(deployment().properties.templateLink.uri, 'parameterLink-resolver.json')]",
    "dmzDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-deployDmz-', variables('templateUniqueString'))]",
    "dmzTemplate": "[uri(deployment().properties.templateLink.uri, 'dmz-deploy.json')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('parametersDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('parametersTemplate')]"
        },
        "parametersLink": {
          "uri": "[parameters('parameterFileLink')]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('dmzDeploymentName')]",
      "dependsOn": [
        "[variables('parametersDeploymentName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('dmzTemplate')]"
        },
        "parameters": {
          "deploymentContext": {
            "value": {
              "parentTemplateUniqueString": "[concat(variables('templateUniqueString'), '-deployDmz')]"
            }
          },
          "dmzSettings": {
            "value": "[reference(variables('parametersDeploymentName')).outputs.dmzSettings.value]"
          },
          "virtualNetworkSettings": {
            "value": "[reference(variables('parametersDeploymentName')).outputs.virtualNetworkSettings.value]"
          },
          "protectedSettings": {
            "value": {
              "adminPassword": "[parameters('adminPassword')]",
              "sshPublicKey": "[parameters('sshPublicKey')]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "resources": {
      "type": "array",
      "value": "[reference(variables('dmzDeploymentName')).outputs.resources.value]"
    }
  }
}
