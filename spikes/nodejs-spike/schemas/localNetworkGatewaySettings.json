{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Settings for the route table building block",
    "id": "https://raw.githubusercontent.com/mspnp/template-building-blocks/spikes/spikes/nodejs-spike/schemas/localNetworkGatewaySettings.json#",
    "type": "object",
    "definitions": {},
    "allOf": [
        {
            "properties": {
                "name": {
                    "type": "string"
                },
                "tags": {
                    "$ref": "types.json#/definitions/tags"
                },
                "routingWeight": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "required": [
                "name",
                "routingWeight"
            ]
        },
        {
            "type": "object",
            "allOf": [
                {
                    "$ref": "types.json#/definitions/resourceReference"
                },
                {
                    "properties": {
                        "ipAddress": {
                            "$ref": "types.json#/definitions/ipAddress"
                        },
                        "addressPrefixes": {
                            "type": "array",
                            "items": {
                                "$ref": "types.json#/definitions/cidr"
                            },
                            "minItems": 1
                        }
                    }
                }
            ],
            "required": [
                "ipAddress",
                "addressPrefixes"
            ]
        }
    ]
}