{
    "id": "https://raw.githubusercontent.com/mspnp/template-building-blocks/spikes/spikes/nodejs-spike/schemas/buildingBlocks.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Building Block Parameters",
    "description": "A building blocks settings file",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "contentVersion": {
            "type": "string",
            "pattern": "(^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$)",
            "description": "A 4 number format for the version number of this parameter file. For example, 1.0.0.0"
        },
        "parameters": {
            "type": "object",
            "properties": {
                "buildingBlocks": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "$ref": "connectionSettings.json#"
                                },
                                {
                                    "$ref": "virtualMachineSettings.json#"
                                },
                                {
                                    "$ref": "virtualMachineExtensionsSettings.json#"
                                },
                                {
                                    "$ref": "virtualNetworkGatewaySettings.json#"
                                },
                                {
                                    "$ref": "virtualNetworkSettings.json#"
                                },
                                {
                                    "$ref": "routeTableSettings.json#"
                                },
                                {
                                    "$ref": "networkSecurityGroupSettings.json#"
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false
}