{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbNetworkSecurityGroup"
      }
    },
    "networkSecurityGroups": {
      "type": "array"
    },
    "subnets": {
      "type": "array",
      "defaultValue": []
    },
    "networkInterfaces": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "sn-workaround": {
       "true": "[parameters('subnets')]",
       "false": [{
       }]
    },
    "sn": "[variables('sn-workaround')[string(greater(length(parameters('subnets')), 0))]]",
    "nic-workaround": {
       "true": "[parameters('networkInterfaces')]",
       "false": [{
       }]
    },
    "nics": "[variables('nic-workaround')[string(greater(length(parameters('networkInterfaces')), 0))]]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('nsg-', copyIndex())]",
      "resourceGroup": "[parameters('networkSecurityGroups')[copyIndex()].resourceGroupName]",
      "copy": {
          "name": "networkSecurityGroups",
          "count": "[length(parameters('networkSecurityGroups'))]",
          "mode": "Parallel"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
              {
                "type": "Microsoft.Network/networkSecurityGroups",
                "apiVersion": "2016-06-01",
                "location": "[parameters('networkSecurityGroups')[copyIndex()].location]",
                "name": "[parameters('networkSecurityGroups')[copyIndex()].name]",
                "properties": "[parameters('networkSecurityGroups')[copyIndex()].properties]",
                "tags": "[parameters('networkSecurityGroups')[copyIndex()].tags]"
            }
          ],
          "outputs": {}
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('nsg-sn-', copyIndex())]",
      "resourceGroup": "[variables('sn')[copyIndex()].resourceGroupName]",
      "condition": "[greater(length(parameters('subnets')), 0)]",
      "dependsOn": [
        "networkSecurityGroups"
      ],
      "copy": {
        "name": "subnets",
        "count": "[length(variables('sn'))]",
        "mode": "Serial"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2016-06-01",
              "name": "[concat(variables('sn')[copyIndex()].virtualNetwork, '/', variables('sn')[copyIndex()].name)]",
              "properties": "[union(reference(variables('sn')[copyIndex()].id, '2016-06-01'), variables('sn')[copyIndex()].properties)]"
            }
          ],
          "outputs": {}
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('nsg-nics-', copyIndex())]",
      "resourceGroup": "[variables('nics')[copyIndex()].resourceGroupName]",
      "condition": "[greater(length(parameters('networkInterfaces')), 0)]",
      "dependsOn": [
        "subnets"
      ],
      "copy": {
         "name": "networkInterfaces",
         "count": "[length(variables('nics'))]",
         "mode": "Serial"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
          },
          "variables": {
          },
          "resources": [
            {
              "type": "Microsoft.Network/networkInterfaces",
              "apiVersion": "2016-06-01",
              "location": "[resourceGroup().location]",
              "name": "[variables('nics')[copyIndex()].name]",
              "properties": "[union(reference(variables('nics')[copyIndex()].id, '2016-06-01'), variables('nics')[copyIndex()].properties)]"
            }
          ],
          "outputs": {
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
