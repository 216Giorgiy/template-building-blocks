{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbVNG"
      }
    },
    "virtualNetworkGateways": {
      "type": "array",
      "metadata": {
        "description": "Settings for virtual network gateways"
      }
    },
    "publicIpAddresses": {
      "type": "array",
      "metadata": {
        "description": "Settings for public IP addresses for virtual network gateways"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "templateUniqueString": "[uniqueString(concat(string(parameters('deploymentContext')), string(parameters('virtualNetworkGateways')), string(parameters('publicIpAddresses'))))]",
    "virtualNetworkGatewayTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/Microsoft.Network/virtualNetworkGateways/virtualNetworkGateway.json')]",
    "publicIpAddressTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/Microsoft.Network/publicIPAddresses/publicIPAddress.json')]",
    "iteratorTemplate": "[uri(deployment().properties.templateLink.uri, '../../resources/common/resources.json')]",
    "publicIpAddressTemplateDeploymentName": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-deployPips-', variables('templateUniqueString'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[variables('publicIpAddressTemplateDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('iteratorTemplate')]"
        },
        "parameters": {
          "deploymentContext": {
            "value": {
              "parentTemplateUniqueString": "[concat(variables('templateUniqueString'), '-deployPips')]"
            }
          },
          "source": {
            "value": "[parameters('publicIpAddresses')]"
          },
          "name": {
            "value": "pip"
          },
          "resourceTemplatePath": {
            "value": "[variables('publicIpAddressTemplate')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "[concat(parameters('deploymentContext').parentTemplateUniqueString, '-deployVng', copyIndex(), '-', variables('templateUniqueString'))]",
      "dependsOn": [
          "[variables('publicIpAddressTemplateDeploymentName')]"
      ],
      "copy": {
        "name": "vngIterator",
        "count": "[length(parameters('virtualNetworkGateways'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('iteratorTemplate')]"
        },
        "parameters": {
          "deploymentContext": {
            "value": {
              "parentTemplateUniqueString": "[concat(variables('templateUniqueString'), '-deployVng', copyIndex())]"
            }
          },
          "source": {
            "value": "[parameters('virtualNetworkGateways')[copyIndex()]]"
          },
          "name": {
            "value": "vng"
          },
          "resourceTemplatePath": {
            "value": "[variables('virtualNetworkGatewayTemplate')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}