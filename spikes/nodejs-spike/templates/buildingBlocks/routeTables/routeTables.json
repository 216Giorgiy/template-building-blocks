{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "deploymentContext": {
      "type": "object",
      "defaultValue": {
        "parentTemplateUniqueString": "bbRouteTable"
      }
    },
    "routeTables": {
      "type": "array"
    },
    "subnets": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "workaround": {
      "true": "[parameters('subnets')]",
      "false": [
        {
          "id": "/workaround/workaround/workaround/workaround"
        }
      ]
    },
    "sn": "[variables('workaround')[string(greater(length(parameters('subnets')), 0))]]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('rt-', copyIndex())]",
      "resourceGroup": "[parameters('routeTables')[copyIndex()].resourceGroupName]",
      "copy": {
        "name": "routeTables",
        "count": "[length(parameters('routeTables'))]",
        "mode": "Parallel"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.Network/routeTables",
              "apiVersion": "2016-06-01",
              "location": "[parameters('routeTables')[copyIndex()].location]",
              "name": "[parameters('routeTables')[copyIndex()].name]",
              "properties": "[parameters('routeTables')[copyIndex()].properties]",
              "tags": "[parameters('routeTables')[copyIndex()].tags]"
            }
          ],
          "outputs": {}
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[concat('sn-', copyIndex())]",
      "resourceGroup": "[variables('sn')[copyIndex()].resourceGroupName]",
      "condition": "[greater(length(parameters('subnets')), 0)]",
      "dependsOn": [
        "routeTables"
      ],
      "copy": {
        "name": "subnets",
        "count": "[length(variables('sn'))]",
        "mode": "Serial"
      },
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks/subnets",
              "apiVersion": "2016-06-01",
              "name": "[concat(variables('sn')[copyIndex()].virtualNetwork, '/', variables('sn')[copyIndex()].name)]",
              "properties": "[union(reference(variables('sn')[copyIndex()].id, '2016-06-01'), variables('sn')[copyIndex()].properties)]"
            }
          ],
          "outputs": {}
        }
      }
    }
  ],
  "outputs": {}
}